<div id="create">
	<h1>Neuen Teleprompter erstellen</h1>
	<span>Room ID: <strong>{{ roomId }}</strong></span>
	
	<span>Geben Sie hier den Text ein:</span>
	<textarea ng-model="text"></textarea>
	
	<span>Clicken Sie auf einen Host zum die Ãœbertragung zu starten</span>
	<div class="hosts">
		<h3 ng-hide="hosts">Keine Hosts verbunden!</h3>
		<div class="host" ng-repeat="host in hosts">
			<i class="fa fa-desktop"></i>
			<span class="ip">{{ host.ip }}</span>
			<span class="resolution">{{ host.width }}x{{ host.height }}</span>
		</div>
	</div>
</div>